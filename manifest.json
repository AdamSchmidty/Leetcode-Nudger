{
  "manifest_version": 3,
  "name": "Leetcode Buddy",
  "version": "2.0.0",
  "description": "Your daily LeetCode companion! Focuses on NeetCode 250 problems organized by category. Only allows neetcode.io, leetcode.com, and chatgpt.com. Solve one problem per day to unlock all sites until midnight!",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://*/*",
    "https://leetcode.com/*",
    "https://neetcode.io/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*"
      ],
      "js": [
        "src/content/index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/data/neetcode250.json",
        "src/assets/data/blind75.json",
        "src/assets/data/neetcode150.json",
        "src/assets/data/neetcodeAll.json",
        "src/assets/data/problemAliases.json",
        "src/content/api.js",
        "src/content/detector.js",
        "src/content/ui.js",
        "src/shared/constants.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}